<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.minimoodle.studentfunctionalities.StudentViewCourses">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <Button fx:id="goBackButton" onAction="#handleGoBack" text="Go Back" />
    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Available Courses" />
    <TableView fx:id="courseTable">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="100" text="Course ID" />
            <TableColumn fx:id="nameColumn" prefWidth="200" text="Course Name" />
            <TableColumn fx:id="actionColumn" prefWidth="150" text="Action" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>

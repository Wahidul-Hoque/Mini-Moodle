<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: #F3F4F6;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.minimoodle.StudentLoginController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="20.0" layoutY="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <!-- Header Section -->
            <AnchorPane prefHeight="150.0" prefWidth="800.0" style="-fx-background-color: #0B3E6B; -fx-border-radius: 20;">
               <children>
                  <VBox alignment="CENTER" prefHeight="73.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <!-- Main Title -->
                        <Label alignment="CENTER" prefHeight="47.0" prefWidth="386.0" text="Student Portal" textFill="#E8F3FD">
                           <font>
                              <Font name="System Bold" size="32.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>

            <!-- Login Form Container -->
            <VBox alignment="CENTER" prefHeight="400.0" prefWidth="800.0" spacing="15.0" style="-fx-padding: 40 60 40 60;">
               <children>
                  <!-- Username Field Container -->
                  <VBox alignment="CENTER" spacing="2.0">
                     <children>
                        <Label style="-fx-text-fill: #1F2A44; -fx-font-weight: bold;" text="Username">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="studentLoginIdBox" prefHeight="45.0" prefWidth="350.0" promptText="Enter your username" style="-fx-background-color: #FFFFFF; -fx-border-color: #D1D5DB; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px;">
                        </TextField>
                     </children>
                  </VBox>

                  <!-- Password Field Container -->
                  <VBox alignment="CENTER" spacing="2.0">
                     <children>
                        <Label style="-fx-text-fill: #1F2A44; -fx-font-weight: bold;" text="Password">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <AnchorPane prefHeight="45.0" prefWidth="350.0">
                           <children>
                              <PasswordField fx:id="studentLoginPasswordBox" prefHeight="45.0" prefWidth="350.0" promptText="Enter your password" style="-fx-background-color: #FFFFFF; -fx-border-color: #D1D5DB; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                              </PasswordField>
                              <TextField fx:id="studentLoginPasswordVisibleBox" prefHeight="45.0" prefWidth="350.0" promptText="Enter your password" style="-fx-background-color: #FFFFFF; -fx-border-color: #D1D5DB; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px;" visible="false" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                              </TextField>
                           </children>
                        </AnchorPane>
                     </children>
                  </VBox>

                  <!-- Show Password Checkbox -->
                  <CheckBox fx:id="studentLoginPasswordCheckBox" mnemonicParsing="false" onAction="#toggleStudentLoginPasswordVisibility" style="-fx-text-fill: #1F2A44;" text="Show Password">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </CheckBox>

                  <!-- Login Button -->
                  <Button fx:id="studentLoginButton" mnemonicParsing="false" onAction="#handleStudentLogin" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: #062F61; -fx-text-fill: #FFFFFF; -fx-cursor: hand; -fx-background-radius: 20; -fx-font-weight: bold;" text="Login to Student Portal">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>

                  <!-- Register Button -->
                  <Button fx:id="studentRegisterButton" mnemonicParsing="false" onAction="#handleStudentRegister" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: #0F363D; -fx-text-fill: #EBD4A7; -fx-cursor: hand; -fx-background-radius: 16; -fx-font-weight: bold;" text="Create Account">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Button>

                  <!-- Back Button -->
                  <Button fx:id="studentLoginBackButton" mnemonicParsing="false" onAction="#handleStudentLoginBack" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: transparent; -fx-text-fill: #062F61; -fx-border-color: #062F61; -fx-border-radius: 15; -fx-background-radius: 15; -fx-cursor: hand;" text="Back">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>

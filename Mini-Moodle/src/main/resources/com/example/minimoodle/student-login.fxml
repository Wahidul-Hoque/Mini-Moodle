<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.minimoodle.StudentLoginController">
   <children>
      <VBox alignment="CENTER" prefHeight="350.0" prefWidth="100.0" spacing="30.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <!-- Title -->
            <Label text="Student Login" textAlignment="CENTER">
               <font>
                  <Font name="Trebuchet MS" size="40.0" />
               </font>
               <style>
                  -fx-text-fill: linear-gradient(to right, #FF6F61, #FFD54F);
               </style>
            </Label>

            <!-- Subtitle -->
            <Label text="Enter Username and Password" textAlignment="CENTER">
               <font>
                  <Font name="Trebuchet MS" size="20.0" />
               </font>
               <style>
                  -fx-text-fill: #4F4F4F;
               </style>
            </Label>

            <!-- Back Button -->
            <Button fx:id="studentLoginBackButton" mnemonicParsing="false" onAction="#handleStudentLoginBack" prefWidth="80.0" style="-fx-background-color: #EEEEEE; -fx-text-fill: #FF6F61; -fx-font-weight: bold; -fx-border-radius: 15; -fx-padding: 5px 10px; -fx-cursor: hand;" text="Back">
               <font>
                  <Font name="Trebuchet MS" size="14.0" />
               </font>
            </Button>

            <!-- Form Container -->
            <VBox alignment="TOP_CENTER" prefHeight="250.0" prefWidth="500.0" spacing="20.0">
               <children>
                  <!-- Username Field (was Student ID) -->
                  <AnchorPane prefHeight="50.0" prefWidth="350.0">
                     <children>
                        <TextField fx:id="studentLoginIdBox" layoutX="10.0" layoutY="10.0" prefHeight="40.0" prefWidth="330.0" promptText="Username" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
                           <style>
                              -fx-background-color: #F9F9F9;
                              -fx-border-radius: 5;
                              -fx-border-color: #B0B0B0;
                              -fx-padding: 5px;
                              -fx-font-size: 14px;
                           </style>
                        </TextField>
                     </children>
                  </AnchorPane>

                  <!-- Password Field -->
                  <AnchorPane prefHeight="50.0" prefWidth="350.0">
                     <children>
                        <PasswordField fx:id="studentLoginPasswordBox" layoutX="10.0" layoutY="10.0" prefHeight="40.0" prefWidth="330.0" promptText="Password" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
                           <style>
                              -fx-background-color: #F9F9F9;
                              -fx-border-radius: 5;
                              -fx-border-color: #B0B0B0;
                              -fx-padding: 5px;
                              -fx-font-size: 14px;
                           </style>
                        </PasswordField>
                        <TextField fx:id="studentLoginPasswordVisibleBox" layoutX="10.0" layoutY="10.0" prefHeight="40.0" prefWidth="330.0" promptText="Password" visible="false" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
                           <style>
                              -fx-background-color: #F9F9F9;
                              -fx-border-radius: 5;
                              -fx-border-color: #B0B0B0;
                              -fx-padding: 5px;
                              -fx-font-size: 14px;
                           </style>
                        </TextField>
                     </children>
                  </AnchorPane>

                  <!-- Password Visibility Toggle -->
                  <CheckBox fx:id="studentLoginPasswordCheckBox" mnemonicParsing="false" onAction="#toggleStudentLoginPasswordVisibility" style="-fx-text-fill: #4F4F4F;" text="Show Password" textAlignment="JUSTIFY" />

                  <!-- Login Button -->
                  <Button fx:id="studentLoginButton" mnemonicParsing="false" onAction="#handleStudentLogin" prefHeight="40.0" prefWidth="200.0" text="Login" textAlignment="CENTER">
                     <font>
                        <Font name="Trebuchet MS" size="18.0" />
                     </font>
                     <style>
                        -fx-background-color: linear-gradient(to right, #FF6F61, #FFD54F);
                        -fx-text-fill: white;
                        -fx-font-weight: bold;
                        -fx-border-radius: 25;
                        -fx-padding: 10px 20px;
                        -fx-effect: dropshadow(gaussian, #333333, 10, 0.5, 0, 2);
                        -fx-cursor: hand;
                     </style>
                  </Button>

                  <!-- Register Button -->
                  <Button fx:id="studentRegisterButton" mnemonicParsing="false" onAction="#handleStudentRegister" prefHeight="30.0" prefWidth="200.0" text="Register Yourself" textAlignment="CENTER">
                     <font>
                        <Font name="Trebuchet MS" size="16.0" />
                     </font>
                     <style>
                        -fx-background-color: linear-gradient(to right, #FFD54F, #FF6F61);
                        -fx-text-fill: white;
                        -fx-font-weight: bold;
                        -fx-border-radius: 25;
                        -fx-padding: 10px 20px;
                        -fx-effect: dropshadow(gaussian, #333333, 8, 0.4, 0, 1);
                        -fx-cursor: hand;
                     </style>
                  </Button>

               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>

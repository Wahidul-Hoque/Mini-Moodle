<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.minimoodle.teacherfunctionalities.TeacherGradingPageController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <Button fx:id="goBackButton" onAction="#handleGoBack" text="Go Back" />
    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Student Grading">
      <font>
         <Font name="Trebuchet MS" size="12.0" />
      </font></Label>
    <TableView fx:id="studentTable">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="104.79998338222504" text="Student ID" />
            <TableColumn fx:id="nameColumn" prefWidth="209.60005950927734" text="Name" />
            <TableColumn fx:id="gradeColumn" prefWidth="98.39996337890625" text="Grade" />
            <TableColumn fx:id="actionColumn" prefWidth="139.2000732421875" text="Action" />
        </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
    </TableView>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="15" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.minimoodle.teacherfunctionalities.ApplyingStudentsPageController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Go Back Button -->
    <Button fx:id="goBackButton" onAction="#handleGoBack" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" text="Back" />

    <!-- Title Label -->
    <Label style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #333;" text="Applying Students" />

    <!-- Student Request Table -->
    <TableView fx:id="requestTable" style="-fx-background-color: #f4f4f9;">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="120" text="Request ID" />
            <TableColumn fx:id="nameColumn" prefWidth="200" text="Student Name" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <!-- Request Details Section -->
    <VBox spacing="10" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-border-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 8, 0, 0, 5);">
        <Label fx:id="studentNameLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Student Name: " />
        <Label fx:id="studentEmailLabel" style="-fx-font-size: 16px;" text="Email: " />
        <VBox alignment="CENTER" prefHeight="35.0" prefWidth="442.0">
            <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
               <children>
                      <!-- Approve or Reject Request Buttons -->
                      <Button fx:id="approveButton" onAction="#handleApproveRequest" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" text="Approve" />
                      <Button fx:id="rejectButton" onAction="#handleRejectRequest" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px;" text="Reject" />
               </children>
            </HBox>
            </children>
        </VBox>
    </VBox>
</VBox>

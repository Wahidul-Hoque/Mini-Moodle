<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>

<AnchorPane prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.minimoodle.TeacherLoginController">
   <children>
      <VBox alignment="CENTER" prefHeight="350.0" prefWidth="100.0" spacing="30.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <!-- Title -->
            <Label text="Teacher Login" textAlignment="CENTER">
               <font>
                  <Font name="Trebuchet MS" size="40.0" />
               </font>
               <!-- <effect>
                  <DropShadow offsetX="5.0" offsetY="5.0" radius="12.0" spread="0.7" color="#3A8DFF"/>
               </effect> -->
               <style>
                  -fx-text-fill: linear-gradient(to right, #3A8DFF, #58A6FF);
               </style>
            </Label>

            <!-- Subtitle -->
            <Label text="Enter Teacher ID and Password" textAlignment="CENTER">
               <font>
                  <Font name="Trebuchet MS" size="20.0" />
               </font>
               <style>
                  -fx-text-fill: #4F4F4F;
               </style>
            </Label>

            <!-- Form Container -->
            <VBox alignment="TOP_CENTER" prefHeight="250.0" prefWidth="500.0" spacing="20.0">
               <children>
                  <!-- Teacher ID Field -->
                  <AnchorPane prefHeight="50.0" prefWidth="350.0">
                     <children>
                        <TextField fx:id="teacherLoginIdBox" layoutX="10.0" layoutY="10.0" prefHeight="40.0" prefWidth="330.0" promptText="Teacher ID" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
                           <style>
                              -fx-background-color: #F9F9F9;
                              -fx-border-radius: 5;
                              -fx-border-color: #B0B0B0;
                              -fx-padding: 5px;
                              -fx-font-size: 14px;
                           </style>
                        </TextField>
                     </children>
                  </AnchorPane>

                  <!-- Password Field -->
                  <AnchorPane prefHeight="50.0" prefWidth="350.0">
                     <children>
                        <PasswordField fx:id="teacherLoginPasswordBox" layoutX="10.0" layoutY="10.0" prefHeight="40.0" prefWidth="330.0" promptText="Password" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
                           <style>
                              -fx-background-color: #F9F9F9;
                              -fx-border-radius: 5;
                              -fx-border-color: #B0B0B0;
                              -fx-padding: 5px;
                              -fx-font-size: 14px;
                           </style>
                        </PasswordField>
                        <TextField fx:id="teacherLoginPasswordVisibleBox" layoutX="10.0" layoutY="10.0" prefHeight="40.0" prefWidth="330.0" promptText="Password" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
                           <style>
                              -fx-background-color: #F9F9F9;
                              -fx-border-radius: 5;
                              -fx-border-color: #B0B0B0;
                              -fx-padding: 5px;
                              -fx-font-size: 14px;
                           </style>
                        </TextField>
                     </children>
                  </AnchorPane>


                  <!-- Password Visibility Toggle -->
                  <CheckBox fx:id="teacherLoginPasswordCheckBox" mnemonicParsing="false" onAction="#toggleTeacherLoginPasswordVisibility" text="Show Password" textAlignment="JUSTIFY" style="-fx-text-fill: #4F4F4F;"/>

                  <!-- Login Button -->
                  <Button fx:id="teacherLoginButton" mnemonicParsing="false" onAction="#processTeacherLogin" prefHeight="40.0" prefWidth="200.0" text="Login" textAlignment="CENTER">
                     <font>
                        <Font name="Trebuchet MS" size="18.0" />
                     </font>
                     <style>
                        -fx-background-color: linear-gradient(to right, #3A8DFF, #58A6FF);
                        -fx-text-fill: white;
                        -fx-font-weight: bold;
                        -fx-border-radius: 25;
                        -fx-padding: 10px 20px;
                        -fx-effect: dropshadow(gaussian, #333333, 10, 0.5, 0, 2);
                        -fx-cursor: hand;
                     </style>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>

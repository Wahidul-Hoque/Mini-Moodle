<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="400" prefWidth="600" spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.minimoodle.adminfunctionalities.AdminViewStudents">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Button fx:id="adminDashboardGoBackButton" text="Back" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" />
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Student Info" />
    <TableView fx:id="adminDashboardStudentsTableView" prefHeight="250" prefWidth="550" style="-fx-background-color: #f4f4f9;">
        <columns>
            <TableColumn fx:id="adminDashboardStudentNameColumn" prefWidth="250" text="Name" />
            <TableColumn fx:id="adminDashboardStudentEmailColumn" prefWidth="250" text="Email" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
    <Button fx:id="adminDashboardViewStudentsButton" disable="true" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" text="View Details" />
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="640.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.minimoodle.AdminDashboardController">
   <children>
      <!-- Title -->
      <Label layoutX="172.0" layoutY="38.0" text="Admin Dashboard" textAlignment="JUSTIFY">
         <font>
            <Font name="Trebuchet MS" size="36.0" />
         </font>
      </Label>

      <!-- System Overview -->
      <Label fx:id="totalTeachersLabel" layoutX="100.0" layoutY="120.0" text="Total Teachers: [Count]" textAlignment="JUSTIFY">
         <font>
            <Font name="Trebuchet MS" size="18.0" />
         </font>
      </Label>
      <Label fx:id="totalCoursesLabel" layoutX="100.0" layoutY="150.0" text="Total Courses: [Count]" textAlignment="JUSTIFY">
         <font>
            <Font name="Trebuchet MS" size="18.0" />
         </font>
      </Label>
      <Label fx:id="totalStudentsLabel" layoutX="100.0" layoutY="180.0" text="Total Students: [Count]" textAlignment="JUSTIFY">
         <font>
            <Font name="Trebuchet MS" size="18.0" />
         </font>
      </Label>

      <!-- Buttons -->
      <Button fx:id="manageTeachersButton" layoutX="100.0" layoutY="240.0" mnemonicParsing="false" onAction="#handleManageTeachersButton" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="Manage Teachers" textAlignment="JUSTIFY">
         <font>
            <Font name="Trebuchet MS" size="16.0" />
         </font>
      </Button>
      <Button fx:id="manageCoursesButton" layoutX="280.0" layoutY="240.0" mnemonicParsing="false" onAction="#handleManageCoursesButton" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5;" text="Manage Courses" textAlignment="JUSTIFY">
         <font>
            <Font name="Trebuchet MS" size="16.0" />
         </font>
      </Button>
      <Button fx:id="manageStudentsButton" layoutX="100.0" layoutY="300.0" mnemonicParsing="false" onAction="#handleManageStudentsButton" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 5;" text="Manage Students" textAlignment="JUSTIFY">
         <font>
            <Font name="Trebuchet MS" size="16.0" />
         </font>
      </Button>
      <Button fx:id="adminLogoutButton" layoutX="541.0" layoutY="340.0" mnemonicParsing="false" onAction="#handleAdminLogout" prefHeight="32.0" prefWidth="69.0" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-background-radius: 5;" text="Logout" textAlignment="JUSTIFY">
         <font>
            <Font name="Trebuchet MS" size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="15" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.example.minimoodle.teacherfunctionalities.EnrolledStudentsPageController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Go Back Button -->
    <Button fx:id="goBackButton" onAction="#handleGoBack"
        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;"
        text="Back" />

    <!-- Title Label -->
    <Label style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #333;"
        text="Currently Enrolled Students" />

    <!-- Enrolled Student Table -->
    <TableView fx:id="studentTable" style="-fx-background-color: #f4f4f9;">
        <columns>
            <TableColumn fx:id="nameColumn" prefWidth="350" text="Student Name" />
            <TableColumn fx:id="emailColumn" prefWidth="350" text="Student Email" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>
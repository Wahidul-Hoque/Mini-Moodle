<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="640.0" style="-fx-background-color: #f4f4f4;" 
            xmlns="http://javafx.com/javafx/23.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.minimoodle.TeacherDashboardController">
   <children>
      <Label fx:id="teacherIdLabel" layoutX="172.0" layoutY="38.0" text="Welcome, [Teacher]" textAlignment="JUSTIFY">
         <font>
            <Font name="Trebuchet MS" size="36.0" />
         </font>
      </Label>
      <Label fx:id="courseNameLabel" layoutX="100.0" layoutY="120.0" text="Course Name: [Course Name]" textAlignment="JUSTIFY">
         <font>
            <Font name="Trebuchet MS" size="18.0" />
         </font>
      </Label>
      <Label fx:id="courseIdLabel" layoutX="100.0" layoutY="150.0" text="Course ID: [Course ID]" textAlignment="JUSTIFY">
         <font>
            <Font name="Trebuchet MS" size="18.0" />
         </font>
      </Label>
      <Label fx:id="enrolledStudentsLabel" layoutX="100.0" layoutY="180.0" text="Enrolled Students: [Count]" textAlignment="JUSTIFY">
         <font>
            <Font name="Trebuchet MS" size="18.0" />
         </font>
      </Label>
      <Button fx:id="teacherDashboardApplicantsButton" layoutX="100.0" layoutY="240.0" mnemonicParsing="false" onAction="#handleTeacherSeeApplyingStudents" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;" text="Applicants" textAlignment="JUSTIFY">
         <font>
            <Font name="Trebuchet MS" size="16.0" />
         </font>
      </Button>
      <Button fx:id="teacherDashboardEnrolledStudentsButton" layoutX="280.0" layoutY="240.0" mnemonicParsing="false" onAction="#handleTeacherViewEnrolledStudentsTable" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5;" text="Enrolled Students" textAlignment="JUSTIFY">
         <font>
            <Font name="Trebuchet MS" size="16.0" />
         </font>
      </Button>
      <Button fx:id="teacherDashboardGradingButton" layoutX="100.0" layoutY="300.0" mnemonicParsing="false" onAction="#handleTeacherGrading" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 5;" text="Grading" textAlignment="JUSTIFY">
         <font>
            <Font name="Trebuchet MS" size="16.0" />
         </font>
      </Button>
         <!-- <font>
            <Font name="Trebuchet MS" size="16.0" />
         </font> -->
      <!-- </Button> -->
      <Button fx:id="teacherDashboardLogoutButton" layoutX="541.0" layoutY="340.0" mnemonicParsing="false" onAction="#handleTeacherLogout" prefHeight="32.0" prefWidth="69.0" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-background-radius: 5;" text="Logout" textAlignment="JUSTIFY">
         <font>
            <Font name="Trebuchet MS" size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>